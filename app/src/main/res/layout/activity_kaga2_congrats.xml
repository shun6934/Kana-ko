<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:background="@drawable/kaga2_congrats_back">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/correct_image1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/kaga2_negi_ira"
                />
            <ImageView
                android:id="@+id/correct_image2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/kaga2_kyuuri_ira"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="102dp">
            <ImageView
                android:id="@+id/correct_image3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/kaga2_kinzisou_ira"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tap"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>