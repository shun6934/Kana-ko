<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kaga1background"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="66dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:src="@drawable/rump2" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="66dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:src="@drawable/rump2" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="66dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:src="@drawable/rump2" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="352dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cucumber"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#E6D7D7">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="335dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:background="@drawable/kaga1frame"
                    android:gravity="center"
                    android:text="これは な〜んだ？"
                    android:textColor="#424242"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="168dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/kaga1button"
                    android:textColor="#D3D3D5"
                    android:textSize="23dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="168dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/kaga1button"
                    android:textColor="#D3D3D5"
                    android:textSize="23dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="168dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/kaga1button"
                    android:textColor="#D3D3D5"
                    android:textSize="23dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="168dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/kaga1button"
                    android:textColor="#D3D3D5"
                    android:textSize="23dp" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>